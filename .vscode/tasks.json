{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/src/Main.cpp",
				"-I",
				"/usr/include",
				"-L",
				"/usr/lib",
				"-o",
				"${workspaceFolder}/bin/Main.exe",
				"-lglfw",
				"-lGL"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}